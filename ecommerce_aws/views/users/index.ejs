<% include ../header %>
  <div class='content' id='users-index'>
    <h1>
      <%= title %>
      <div class='search-crud-input'>
        <input type='search' placeholder='Buscar usuário' />
        <i class='fa fa-search'></i>
      </div>
      <a class='new-crud-button' href='/users/new'>
        <i class='fa fa-user-plus'></i> Adicionar novo
      </a>
    </h1>
    <table>
      <tr>
        <th class='user-info'>Informações dos usuários</th>
        <th></th>
        <th></th>
      </tr>
      <% users.forEach(function(user){ %>
        <tr class="user-row">
          <td class='user-info'>
            <img class='user-photo' src="<%= user.photo_url %>"/>
            <div class='user-name'>
              <span><%= user.name %></span>
              <span><%= user.login %></span>
            </div>
            <div class="user-email">E-mail: <%= user.email %></div>
            <div class="user-birthdate">Data de nascimento: <%= user.birthdate %></div>
            <div class="user-phone">Telefone: <%= user.phone %></div>
          </td>
          <td class='user-action'>
            <a href='/users/edit/<%= user.id %>'><i class='fa fa-edit'></i> Editar</a>
          </td>
          <td class='user-action'>
            <a href='/users/delete/<%= user.id %>'><i class='fa fa-trash'></i> Remover</a>
          </td>
          
        </tr>
      <% }) %>
    </table>
  </div>
<% include ../footer %>