<% include header %>
  <div class='content' id='users-new'>
    <h1>
      <%= title %>
    </h1>
    <form action="/users/<%= action %>" method="POST" enctype="multipart/form-data">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="<%= doc.name %>" placeholder="Enter your full name" required/>
      <br />
      <label for="photo">Photo:</label>
      <input type="file" id="photo" name="photo" />
      <br />
      <label for="email">E-mail:</label>
      <input type="email" id="email" name="email" value="<%= doc.email %>" placeholder="Enter your email address" />
      <br />
      <label for="address">Address:</label>
      <input type="text" id="address" name="address" value="<%= doc.address %>" placeholder="Enter your full address" />
      <br />
      <label for="phone">Phone number:</label>
      <input type="text" id="phone" name="phone" value="<%= doc.phone %>" placeholder="Enter your phone number" />
      <br />
      <input type="submit" value="Save" />
    </form>
  </div>
<% include footer %>